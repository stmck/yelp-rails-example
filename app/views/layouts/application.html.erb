                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            
                            <h1 class="title"><span class="navbar-brand"><%= link_to "vegeres", home_index_path , data: { no_turbolink: true } %></span></h1>
                        </div>

                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                            <ul class="nav navbar-nav navbar-right">

                               <li class="dropdown">
                                    <a href="#">About vegeres</a>
                                </li>
                                
                                <li class="dropdown">
                                    <a href="/users/sign_up">Sign up</a>
                                </li>
                                <li class="dropdown">
                                    <a href="/users/login">Sign in</a>
                                </li>
