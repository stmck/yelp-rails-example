<div id="mypage">
    <div class="sign container cf">
    <p class="t_right">
        <%= link_to 'My account  >', edit_user_registration_path %> 
    </p>
    
    <h1>My favorite list <span><i class="fa fa-diamond"></i></span></h1>
                 
             <% @shops.each do |shop| %>
             <div class="result cf col-md-4 col-sm-6 ">
                <h4>★ <a href="<%=shop.url %>"><%=shop.name %></a></h4>
                <img class="biz_img" src="<%=shop.image_url %>" alt="お店画像">
                <p><%=shop.display_phone %></p>
                <p><%=shop.location_display_address %></p>
                
                <img class="" src="<%=shop.star %>" alt="rating"><br>
                <p><span class="t_count"><%=shop.review_count %></span> reviews</p>

                <!--<p class="clear-fix"></p> -->
                <!-- <p class="d_btn">お気に入りから削除</p><br> -->
                <!-- ※favorite_destroy_path(id: shop.id) は、favoriteコントローラーのdestroyメソッドにとび、
                 とび先は、お気に入りしたshopのidの飛び先。-->
                 <div class="btn_delete"><%= link_to "delete", favorite_destroy_path(id: shop.id), method: :delete,
                                                         data: { confirm: "お気に入りリストから削除しますか？" } %></div>
             </div>
             <% end %>     

    </div>
</div>


